<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity">

    <RelativeLayout
        android:id="@+id/r6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        >

        <TextView
            android:id="@+id/page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textStyle="bold"
            android:textSize="25dp"
            android:height="50dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"

            />

    </RelativeLayout>

    <EditText
        android:id="@+id/find_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please write your phone number..."
        android:background="@drawable/input_degins"
        android:layout_below="@+id/r6"
        android:padding="14dp"
        android:layout_margin="15dp"
        />

    <TextView
        android:id="@+id/title_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer the following security Questions"
        android:gravity="center"
        android:textSize="26dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/find_phone_number"
        />

    <EditText
        android:id="@+id/question_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="What is your birth place?"
        android:background="@drawable/input_degins"
        android:layout_below="@+id/title_questions"
        android:padding="14dp"
        android:layout_margin="15dp"
        />

    <EditText
        android:id="@+id/question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Who is your favourite Marvel's SuperHero?"
        android:background="@drawable/input_degins"
        android:layout_below="@+id/question_1"
        android:padding="14dp"
        android:layout_margin="15dp"
        />

    <Button
        android:id="@+id/verify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:background="@drawable/buttons"
        android:layout_below="@+id/question_2"
        android:padding="14dp"
        android:layout_margin="25dp"
        android:textStyle="bold"
        android:textSize="15dp"
        />

</RelativeLayout>